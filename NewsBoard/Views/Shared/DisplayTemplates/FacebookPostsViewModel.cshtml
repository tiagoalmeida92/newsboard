@model NewsBoard.Web.ViewModels.FacebookPostsViewModel

<div class="spacer thumbnail">
    <img class="img-rounded" src="@Model.Picture" />
    <div class="caption">
        <a href="@Model.Link"><h3>@Model.Name</h3></a>
        @{
            if (Model.Message != null)
            {
                <p>@Model.Message</p>
            }
            else
            {
                if (@Model.Description != null)
                {
                    <p>@Model.Description</p>
                }
            }
        }
        <a href="http://@Model.Caption">
            <img width="20" height="20" src="http://s2.googleusercontent.com/s2/favicons?domain=@Model.Caption" />
        </a>
        <span class="label label-default">@Html.DisplayFor(m => m.CreatedTime)</span>
    </div>
</div>